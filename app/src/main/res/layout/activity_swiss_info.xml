<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SwissInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp"
        android:orientation="vertical"
        android:padding="8dp">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#FF0000"
        android:text="Welcome to the Infos about Switzerland!"
        android:textAlignment="center"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#00BCD4"
        android:text="Here you will find interesting facts and informations about Switzerland."/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textAlignment="center"
        android:textColor="#9C27B0"
        android:text="Switzerland is known for its beautiful landscapes, including the Alps and numerous lakes."/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textAlignment="center"
        android:textColor="#E91E63"
        android:text="The country is famous for its chocolate, cheese, and watches."/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textAlignment="center"
        android:textColor="#FF9800"
        android:text="Switzerland has four official languages: German, French, Italian, and Romansh."/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textAlignment="center"
            android:textColor="#4CAF50"
            android:text="The capital city of Switzerland is Bern, while Zurich is the largest city. When Napolion was in Switzerland he chose Aarau as his headquarters."/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textColor="#8BC34A"
            android:textAlignment="center"
            android:text="Bern is not only the capital city its the city where the Swiss Parliament is located."/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textAlignment="center"
            android:textColor="#CDDC39"
            android:text="Switzerland is known for its high quality of life and consistently ranks among the top countries in the world for healthcare, education, and overall well-being."/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textAlignment="center"
            android:textColor="#FFC107"
            android:text="Switzerland is known for its neutrality and has not been involved in any military conflict since 1815."/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textAlignment="center"
            android:textColor="#03A9F4"
            android:text="The Swiss banking system is renowned for its stability and privacy."/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textAlignment="center"
            android:textColor="#2196F3"
            android:text="Switzerland is home to many international organizations, including the Red Cross and the United Nations office in Geneva."/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnToMA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textAlignment="center"
        android:text="Click here to get to the Home Page!"/>
    </LinearLayout>
</ScrollView>